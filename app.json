{
  "expo": {
    "name": "NadoBeep",
    "slug": "nadobeep",
    "version": "1.4.0a",
    "orientation": "portrait",
    "icon": "./assets/images/android/playstore-icon.png",
    "scheme": "nadobeep",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/images/ios/iTunesArtwork@3x.png",
      "resizeMode": "contain",
      "backgroundColor": "#e74c3c"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.nadobeep.app",
      "infoPlist": {
        "UIBackgroundModes": [
          "remote-notification",
          "fetch",
          "processing",
          "audio"
        ],
        "BGTaskSchedulerPermittedIdentifiers": [
          "background-fetch-alerts",
          "notification-response-task"
        ],
        "aps": {
          "critical-alert": true,
          "sound": true
        }
      },
      "icon": "./assets/images/ios/AppIcon.appiconset/ItunesArtwork@2x.png"
    },
    "android": {
      "versionCode": 6,
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/android/mipmap-xxxhdpi/ic_launcher_foreground.png",
        "backgroundColor": "#e74c3c"
      },
      "package": "com.nadobeep.app",
      "useNextNotificationsApi": true,
      "permissions": [
        "NOTIFICATIONS",
        "VIBRATE",
        "SCHEDULE_EXACT_ALARM",
        "FOREGROUND_SERVICE",
        "POST_NOTIFICATIONS",
        "ACCESS_NETWORK_STATE",
        "INTERNET",
        "RECEIVE_BOOT_COMPLETED"
      ],
      "allowBackgroundNotificationTapping": true,
      "foregroundService": {
        "name": "Weather Alert Monitor",
        "notification": {
          "title": "NadoBeep is active",
          "body": "Monitoring for severe weather alerts",
          "icon": "./assets/images/android/mipmap-mdpi/ic_launcher.png",
          "color": "#e74c3c",
          "sticky": true,
          "priority": "high"
        }
      },
      "notification": {
        "icon": "./assets/images/android/mipmap-mdpi/ic_launcher.png",
        "color": "#3498db"
      }
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "name": "NadoBeep - Severe Weather Alerts in the US",
      "shortName": "NadoBeep",
      "themeColor": "#e74c3c",
      "favicon": "./assets/images/android/ic_launcher-web.png",
      "notification": {
        "icon": "./assets/images/android/mipmap-mdpi/ic_launcher.png"
      },
      "assetBundlePatterns": [
        "assets/sounds/*"
      ],
      "staticPaths": ["./web"]
    },
    "plugins": [
      "expo-router",
      [
        "expo-notifications",
        {
          "icon": "./assets/images/android/mipmap-mdpi/ic_launcher.png",
          "color": "#e74c3c",
          "sounds": [
            "./assets/sounds/alarm.mp3"
          ],
          "priority": "max",
          "importance": "max",
          "foregroundPresentation": true,
          "allowAlert": true,
          "allowSound": true,
          "allowBadge": true,
          "criticalAlerts": true
        }
      ],
      [
        "expo-background-fetch",
        {
          "startOnBoot": true,
          "registerTaskOnAppStart": true
        }
      ],
      [
        "expo-task-manager",
        {
          "taskNames": [
            "background-fetch-alerts",
            "notification-response-task"
          ],
          "frequency": 900
        }
      ],
      [
        "./plugins/notifee-mod.js"
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {
        "origin": false
      },
      "eas": {
        "projectId": "1eb97812-7557-4b38-a0e8-07eedab1862c"
      }
    }
  }
}
